<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kdt.goohae.mapper.admin.PostBoardMapper">
    <!-- 게시글 등록 -->
    <insert id="regPostBoard">
        insert into post_board(manager_id, title, content)
        values(#{managerId}, #{title}, #{content})
    </insert>
    
    <!-- 게시글 데이터 가져올 때 check 여부 -->
    <sql id="check">
        <choose>
            <when test="check == 'new'.toString()">
                order by reg_date desc
            </when>

            <when test="check == 'old'.toString()">
                order by reg_date asc
            </when>

            <otherwise>
                order by reg_date desc
            </otherwise>
        </choose>
    </sql>

    <!-- 게시글 데이터 가져오기 ( 페이징 적용 ) -->
    <select id="getPostBoard" resultType="PostBoardVO">
        select *
        from post_board
        <include refid="check" />
        limit #{startNum}, #{rowsPerPage}
    </select>

    <!-- 게시글 전체 데이터 가져오기 -->
    <select id="getTotalData" resultType="int">
        select count(*)
        from post_board
    </select>


    <!-- 게시글 삭제 -->
    <delete id="delPostBoard">
        delete from post_board
        where post_seq = #{postSeq}
    </delete>


    <!-- 게시글 디테일 -->
    <select id="postDetail" resultType="PostBoardVO">
        select *
        from post_board
        where post_seq = #{postSeq}
    </select>


    <!-- 게시글 수정 -->
    <update id="updatePost">
        update post_board set
        content = #{content}
        where post_seq = #{postSeq}
    </update>
</mapper>